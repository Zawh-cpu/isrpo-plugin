{
  "name": "simple-vscode-ext",
  "displayName": "ITMO - как смысл жизни",
  "description": "aaa ыыыы эээ ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "simple-vscode-ext.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "simple-vscode-ext.writePSJ",
        "title": "Написать ПСЖ",
        "category": "ITMO.РИЛ"
      },
      {
        "command": "simple-vscode-ext.trailerPSJ",
        "title": "Трейлер ПСЖ",
        "category": "ITMO.РИЛ"
      },
      {
        "command": "simple-vscode-ext.initBlackCppProject",
        "title": "Blank CPP project",
        "category": "Init"
      },
      {
        "command": "simple-vscode-ext.slotSpin",
        "title": "Депнуть",
        "category": "ITMO.Fun"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
